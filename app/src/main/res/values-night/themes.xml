<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.MedicineReminder" parent="android:ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:colorPrimary">@color/primary_blue</item>
        <item name="android:colorPrimaryDark">@color/purple_700</item>
        <item name="android:colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>

    <!-- Material theme attributes -->
    <style name="ThemeOverlay.MedicineReminder.ActionBar" parent="">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.MedicineReminder.Button" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>